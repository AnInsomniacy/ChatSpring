<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:paddingTop="4dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear_layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray"
        android:orientation="horizontal"
        android:padding="6dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageview_logo"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/chatspringlogo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chatspring_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ChatSpring"
                android:textSize="16sp"

                android:textColor="@color/black"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/chatspring_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="一款基于GPT的AI工具箱！"
                android:textSize="14sp"
                android:textColor="@color/grey"
                android:gravity="center_vertical" />
        </LinearLayout>

        <ImageView
            android:id="@+id/QRcode"
            android:layout_width="10dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:scaleType="fitEnd"
            android:layout_marginStart="0dp"
            android:src="@drawable/qrcode" />
    </LinearLayout>

    <TextView
        android:id="@+id/textview_appname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="卡片名称"
        android:gravity="center"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:padding="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="@id/linear_layout_top"
        app:layout_constraintStart_toStartOf="@id/linear_layout_top"
        app:layout_constraintTop_toBottomOf="@id/linear_layout_top" />


    <TextView
        android:id="@+id/textview_appdescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="功能描述"
        android:padding="10dp"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@color/grey"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="@id/linear_layout_top"
        app:layout_constraintStart_toStartOf="@id/linear_layout_top"
        app:layout_constraintTop_toBottomOf="@+id/textview_appname" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="我的输入🙋‍‍"
        android:textSize="17sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/textview_appdescription"
        app:layout_constraintStart_toStartOf="@+id/textview_appdescription"
        app:layout_constraintTop_toBottomOf="@+id/textview_appdescription" />
    <TextView
        android:id="@+id/textview_myinput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="myinput"
        android:padding="10dp"
        android:background="@drawable/bg_rounded_blue"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="@id/linear_layout_top"
        app:layout_constraintStart_toStartOf="@id/linear_layout_top"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="AI应答🤖"
        android:textSize="17sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/textview_myinput"
        app:layout_constraintStart_toStartOf="@+id/textview_myinput"
        app:layout_constraintTop_toBottomOf="@+id/textview_myinput" />


    <TextView
        android:id="@+id/textview_response"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="8dp"
        android:text="response"
        android:padding="10dp"
        android:background="@drawable/bg_rounded_gray"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/linear_layout_top"
        app:layout_constraintStart_toStartOf="@id/linear_layout_top"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />



</androidx.constraintlayout.widget.ConstraintLayout>