<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".appsetting.InformationFragment">


    <Button
        android:id="@+id/back_button"
        android:layout_width="35dp"
        android:layout_height="33dp"
        android:layout_marginStart="10dp"

        android:background="@drawable/key4"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title" />

    <Button
        android:id="@+id/changeID_button"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/round_border"
        android:gravity="center"
        android:padding="6dp"
        android:text="昵称"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/changeUser_button"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="10dp"

        android:background="@drawable/round_border"
        android:text="切换账号"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/changeID_button"
        app:layout_constraintStart_toStartOf="@+id/changeID_button"
        app:layout_constraintTop_toBottomOf="@+id/changeID_button" />

    <Button
        android:id="@+id/exit_button"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/round_border"
        android:text="退出登录"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/changeUser_button"
        app:layout_constraintStart_toStartOf="@+id/changeUser_button"
        app:layout_constraintTop_toBottomOf="@+id/changeUser_button" />

    <ImageView
        android:id="@+id/image_view4"
        android:layout_width="28dp"
        android:layout_height="29dp"
        android:src="@drawable/right1"
        app:layout_constraintBottom_toBottomOf="@+id/changeID_button"
        app:layout_constraintEnd_toEndOf="@+id/changeID_button"
        app:layout_constraintHorizontal_bias="0.981"
        app:layout_constraintStart_toStartOf="@+id/changeID_button"
        app:layout_constraintTop_toTopOf="@+id/changeID_button"
        app:layout_constraintVertical_bias="0.508" />

    <ImageView
        android:id="@+id/image_view5"
        android:layout_width="28dp"
        android:layout_height="29dp"
        android:src="@drawable/right1"
        app:layout_constraintBottom_toBottomOf="@+id/changeUser_button"
        app:layout_constraintEnd_toEndOf="@+id/changeUser_button"
        app:layout_constraintHorizontal_bias="0.979"
        app:layout_constraintStart_toStartOf="@+id/changeUser_button"
        app:layout_constraintTop_toTopOf="@+id/changeUser_button"
        app:layout_constraintVertical_bias="0.55" />

    <ImageView
        android:id="@+id/image_view6"
        android:layout_width="28dp"
        android:layout_height="29dp"
        android:src="@drawable/right1"
        app:layout_constraintBottom_toBottomOf="@+id/exit_button"
        app:layout_constraintEnd_toEndOf="@+id/exit_button"
        app:layout_constraintHorizontal_bias="0.979"
        app:layout_constraintStart_toStartOf="@+id/exit_button"
        app:layout_constraintTop_toTopOf="@+id/exit_button"
        app:layout_constraintVertical_bias="0.55" />


    <ImageView
        android:id="@+id/image_view2"
        android:layout_width="42dp"
        android:layout_height="44dp"
        android:layout_marginStart="32dp"
        android:src="@drawable/transformuser"
        app:layout_constraintBottom_toBottomOf="@+id/changeUser_button"
        app:layout_constraintStart_toStartOf="@+id/changeUser_button"
        app:layout_constraintTop_toTopOf="@+id/changeUser_button"
        app:layout_constraintVertical_bias="0.529" />

    <ImageView
        android:id="@+id/image_view3"
        android:layout_width="42dp"
        android:layout_height="44dp"
        android:layout_marginStart="34dp"
        android:src="@drawable/exitlogin"
        app:layout_constraintBottom_toBottomOf="@+id/exit_button"
        app:layout_constraintStart_toStartOf="@+id/exit_button"
        app:layout_constraintTop_toTopOf="@+id/exit_button"
        app:layout_constraintVertical_bias="0.529" />

    <ImageView
        android:id="@+id/image_view1"
        android:layout_width="42dp"
        android:layout_height="44dp"
        android:src="@drawable/aman"
        app:layout_constraintBottom_toBottomOf="@+id/changeID_button"
        app:layout_constraintEnd_toEndOf="@+id/changeID_button"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="@+id/changeID_button"
        app:layout_constraintTop_toTopOf="@+id/changeID_button" />

    <TextView
        android:id="@+id/title"
        android:layout_width="61dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="设置"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/changeID_button"
        app:layout_constraintStart_toStartOf="@+id/changeID_button"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/about_button"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/round_border"
        android:text="关于我们"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/exit_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/exit_button"
        app:layout_constraintTop_toBottomOf="@+id/exit_button" />

    <ImageView
        android:id="@+id/image_view8"
        android:layout_width="42dp"
        android:layout_height="44dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/aboutus"
        app:layout_constraintBottom_toBottomOf="@+id/about_button"
        app:layout_constraintStart_toStartOf="@+id/about_button"
        app:layout_constraintTop_toTopOf="@+id/about_button" />

    <ImageView
        android:id="@+id/image_view9"
        android:layout_width="28dp"
        android:layout_height="29dp"
        android:src="@drawable/right1"
        app:layout_constraintBottom_toBottomOf="@+id/about_button"
        app:layout_constraintEnd_toEndOf="@+id/about_button"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="@+id/about_button"
        app:layout_constraintTop_toTopOf="@+id/about_button"
        app:layout_constraintVertical_bias="0.51" />

</androidx.constraintlayout.widget.ConstraintLayout>